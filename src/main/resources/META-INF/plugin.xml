<idea-plugin>
    <id>jp.kitabatakep.intellij.plugins.CodeReadingNote</id>
    <name>Code Reading Note</name>
    <vendor email="kitabatake.programmer@gmail.com">kitabatakep</vendor>
    <version>2019.1.1</version>
<!--    <idea-version since-build="193" />-->
    <idea-version since-build="193"/>
    <description><![CDATA[
    Write down that you understood in the code reading work in a place that has a high affinity with code!<br><br>

    <b>Features</b>
    <ul>
        <li>Organize your notes by Topic</li>
        <li>
            Combine the code line you want to keep to Topic.
            This makes you always open the code line from note. (like Bookmark feature)
        </li>
        <li>
            Arrange code lines to meaningful order by drag and drop.
            For example, priority or process flows.
        </li>
    </ul>

    <p>
        This plugin may not be suitable for projects that change frequently
        because a point that links with note is static(ex. file path and line number) .
    </p>
    ]]>
    </description>

    <change-notes><![CDATA[
        <html>
<body>
    <ul>
        <li>Improve plugin description</li>
        <li>Extend Intellij version compatibility</li>
    </ul>
</body>
</html>
    ]]></change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="jp.kitabatakep.intellij.plugins.codereadingnote.CodeReadingNoteService" />
        <toolWindow icon="MyIcons.PLUGIN" id="Code Reading Note" anchor="bottom" factoryClass="jp.kitabatakep.intellij.plugins.codereadingnote.ManagementToolWindowFactory" />

    </extensions>

    <actions>
        <action
                icon="MyIcons.PLUGIN"
                id="jp.kitabatakep.intellij.plugins.codereadingnote.actions.TopicLineAddAction"
                class="jp.kitabatakep.intellij.plugins.codereadingnote.actions.TopicLineAddAction"
                text="Add to Topic">
            <add-to-group group-id="EditorPopupMenu" />
        </action>
    </actions>
</idea-plugin>